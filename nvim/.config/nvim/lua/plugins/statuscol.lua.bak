return {
  "luukvbaal/statuscol.nvim",
  event = "BufReadPost",
  init = function()
    if vim.opt.foldenable then
      vim.opt_global.foldcolumn = "1"
    else
      vim.opt_global.foldcolumn = "0"
    end
  end,
  config = function()
    local builtin = require("statuscol.builtin")
    require("statuscol").setup({
      segments = {
        {
          sign = {
            name = { "GitSigns*" },
            maxwidth = 1,
            colwidth = 1,
          },
          click = "v:lua.ScSa",
        },
        {
          sign = {
            name = { ".*" },
            maxwidth = 1,
            colwidth = 2,
          },
          click = "v:lua.ScSa",
        },
        {
          text = { builtin.lnumfunc, " " },
          condition = { true, builtin.not_empty },
          click = "v:lua.ScLa",
        },
        {
          text = { builtin.foldfunc, " " },
          condition = { true, builtin.not_empty },
          click = "v:lua.ScFa",
        },
      },
    })
  end,
}
